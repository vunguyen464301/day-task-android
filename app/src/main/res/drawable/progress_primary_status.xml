      android:shape="ring"
      android:thickness="2dp"
      android:useLevel="false">
      <solid android:color="@color/dark" />
    </shape>
  </item>

  <item android:id="@android:id/progress">
    <shape
      android:shape="ring"
      android:thickness="2dp"
      android:useLevel="true">

      <solid android:color="@color/primary" />
    </shape>
  </item>
</layer-list>